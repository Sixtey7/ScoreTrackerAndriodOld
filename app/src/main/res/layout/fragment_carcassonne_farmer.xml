<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
        >
        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/agricolaSubItemLabel"
            android:id="@+id/carcassoneSubFarmerCityButton"/>
        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:id="@+id/carcassonneFarmerValue"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/carcassoneSubFarmerCityButton"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/agricolaAddItemLabel"
            android:id="@+id/carcassonneAddFarmerCityButton"
            android:layout_toEndOf="@+id/carcassonneFarmerValue"/>
        <TextView
            android:id="@+id/agricolaFieldResourceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/carcassonneFarmerCityName"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/carcassonneAddFarmerCityButton"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_centerVertical="true"
            android:id="@+id/carcassonneFarmerScore"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/carcassonneSubmitFarmerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/carcassonneFarmerSubmitButtonLabel"/>

    </LinearLayout>

</LinearLayout>